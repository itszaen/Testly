<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!-- Action Bar Style -->
        <item name="android:actionBarStyle">@style/AppTheme.ActionBar</item>
        <item name="actionBarStyle">@style/AppTheme.ActionBar</item>\
        <item name="android:windowActionBarOverlay">true</item>
        <!-- Scroll Style -->
        <item name="android:listViewStyle">@style/Widget.AppTheme.ListView</item>
        <item name="android:scrollViewStyle">@style/Widget.AppTheme.ScrollView</item>
    </style>

    <style name="AppTheme.Transparent" parent="AppTheme.NoActionBar">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="ActivityTheme.CasViewer.Transparent" parent="AppTheme.Transparent">
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor">@color/colorPrimary</item>
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primaryDark</item>
    </style>

    <style name="AppTheme.ActionBar">
        <item name="android:titleTextStyle">@style/AppTheme.ActionBar.TitleText</item>
        <item name="titleTextStyle">@style/AppTheme.ActionBar.TitleText</item>
        <item name="android:background">@color/primary</item>
        <item name="background">@color/primary</item>
        <item name="android:height">@dimen/action_bar_height</item>
        <item name="height">@dimen/action_bar_height</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" >
        <item name="android:actionBarStyle">@style/AppTheme.ActionBar</item>
        <item name="actionBarStyle">@style/AppTheme.ActionBar</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.ActionBar.TitleText" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textSize">@dimen/action_bar_text_size</item>
        <item name="android:textColor">@color/md_white_1000</item>
    </style>

    <!-- Scroll -->
    <style name="Widget.AppTheme.ListView" parent="android:Widget.ListView">
        <item name="android:overScrollMode">never</item>
    </style>
    <style name="Widget.AppTheme.ScrollView" parent="android:Widget.ScrollView">
        <item name="android:overScrollMode">never</item>
    </style>
    <!-- Apparently there is no recyclerview as parent. PUNPUN -->
    <style name="AppTheme.RecyclerView">
        <item name="android:overScrollMode">never</item>
    </style>

    <!-- Welcome Screen -->
    <style name="TestlyWelcomeScreenTheme" parent="WelcomeScreenTheme">
        <item name="welcomeNormalTextStyle">@style/IntroText</item>
        <item name="welcomeLargeTextStyle">@style/largeIntroText</item>
        <item name="welcomeTitleTextStyle">@style/titleIntroText</item>
        <item name="welcomeButtonBarFirstStyle">@style/buttonFirst</item>
        <item name="welcomeButtonBarSecondStyle">@style/buttonSecond</item>
    </style>
    <style name="IntroText" parent="WelcomeScreenText.Centered"/>
    <style name="normalIntroText" parent="IntroText">
        <item name="android:textSize">@dimen/medium_text</item>
        <item name="android:textColor">@color/md_white_1000</item>
    </style>
    <style name="largeIntroText" parent="IntroText">
        <item name="android:textSize">@dimen/large_text</item>
        <item name="android:textColor">@color/md_white_1000</item>
    </style>
    <style name="titleIntroText" parent="IntroText">
        <item name="android:textSize">@dimen/large_text</item>
        <item name="android:textColor">@color/md_white_1000</item>
    </style>
    <style name="buttonFirst" parent="WelcomeScreenTheme">
        <item name="android:text">@string/intro_login</item>
    </style>
    <style name="buttonSecond" parent="WelcomeScreenTheme">
        <item name="android:text">@string/intro_signup</item>
    </style>

    <!-- Log in & Sign up -->
    <style name="Login" parent="AppTheme.NoActionBar">
        <item name="android:editTextStyle">@style/whiteEditText</item>
        <item name="editTextStyle">@style/whiteEditText</item>
    </style>
    <style name="Signup" parent="AppTheme.NoActionBar">
        <item name="android:editTextStyle">@style/whiteEditText</item>
        <item name="editTextStyle">@style/blackEditText</item>
    </style>
    <style name="whiteEditText" parent="android:Widget.EditText">
        <item name="android:textColor">@color/accent_white</item>
        <item name="android:textColorHint">@color/accent_white</item>
        <item name="colorControlNormal">@color/accent_white</item>
        <item name="colorControlActivated">@color/accent_white</item>
        <item name="colorControlHighlight">@color/accent_white</item>
        <item name="android:backgroundTint">@color/accent_white</item>
        <item name="android:textCursorDrawable">@drawable/cursor_white</item>
        <item name="backgroundTint">@color/accent_white</item>
    </style>
    <style name="whiteErrorText" parent="TextAppearance.Design.Error">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textAlignment">textEnd</item>

    </style>
    <style name="whiteTextInputLayout" parent="Widget.Design.TextInputLayout">
        <item name="android:textColorHint">@color/md_grey_500</item>
        <item name="android:textSize">@dimen/medium_text</item>
        <item name="colorAccent">@color/loginText</item>
        <item name="colorControlNormal">@color/loginText</item>
        <item name="colorControlActivated">@color/loginText</item>
    </style>
    <style name="blackEditText" parent="android:Widget.EditText">
        <item name="android:textColor">@color/signupText</item>
        <item name="android:textColorHint">@color/signupText</item>
        <item name="colorControlNormal">@color/signupText</item>
        <item name="colorControlActivated">@color/signupText</item>
        <item name="colorControlHighlight">@color/signupText</item>
        <item name="android:backgroundTint">@color/signupText</item>
        <item name="android:textCursorDrawable">@drawable/cursor_black</item>
        <item name="backgroundTint">@color/signupText</item>
    </style>
    <style name="blackErrorText" parent="TextAppearance.Design.Error">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textAlignment">textEnd</item>
    </style>
    <style name="blackTextInputLayout" parent="Widget.Design.TextInputLayout">
        <item name="android:textColorHint">@color/md_grey_500</item>
        <item name="android:textSize">@dimen/medium_text</item>
        <item name="colorAccent">@color/signupText</item>
        <item name="colorControlNormal">@color/signupText</item>
        <item name="colorControlActivated">@color/signupText</item>
    </style>

    <style name="menu_labels_style">
        <item name="android:background">@drawable/label_fab</item>
        <item name="android:textColor">@color/accent_white</item>
    </style>

    <style name="cardQuestionText" parent="@android:style/TextAppearance.Widget.TextView">
        <item name="android:textSize">@dimen/sub_large_text</item>
        <item name="android:textColor">@color/md_grey_900</item>
    </style>

    <style name="cardObjectiveText" parent="@android:style/TextAppearance.Widget.TextView">
        <item name="android:textSize">@dimen/medium_text</item>
        <item name="android:textColor">@color/md_grey_900</item>
    </style>
</resources>
