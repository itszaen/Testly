<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Exam Card -->
    <declare-styleable name="ExamCard">
        <attr name="examTitle" format="string"/>
        <attr name="examSubjectTitle" format="string"/>
        <attr name="examDate" format="string"/>
        <attr name="examProgress" format="integer"/>
    </declare-styleable>

    <!-- Card Item -->
    <attr name="cardItemIcon" format="string"/>
    <attr name="cardItemTitle" format="reference"/>
    <attr name="cardItemCaption" format="reference"/>

    <!-- Setting Item -->
    <attr name="settingMinApi" format="integer"/>
    <attr name="settingDefaultValue" format="boolean"/>
    <attr name="settingPreferenceKey" format="integer"/>


    <declare-styleable name="CardItemView">
        <attr name="cardItemIcon"/>
        <attr name="cardItemTitle"/>
        <attr name="cardItemCaption"/>
    </declare-styleable>
    <declare-styleable name="CardItemTitleOnlyView">
        <attr name="cardItemIcon"/>
        <attr name="cardItemTitle"/>
        <attr name="cardItemCaption"/>
    </declare-styleable>
    <declare-styleable name="SettingView">
        <attr name="cardItemIcon"/>
        <attr name="cardItemTitle"/>
        <attr name="cardItemCaption"/>
        <attr name="settingMinApi"/>
    </declare-styleable>
    <declare-styleable name="SettingTitleOnlyView">
        <attr name="cardItemIcon"/>
        <attr name="cardItemTitle"/>
        <attr name="settingMinApi"/>
    </declare-styleable>
    <declare-styleable name="SettingSwitchView">
        <attr name="cardItemIcon"/>
        <attr name="cardItemTitle"/>
        <attr name="cardItemCaption"/>
        <attr name="settingMinApi"/>
        <attr name="settingDefaultValue"/>
        <attr name="settingPreferenceKey"/>
    </declare-styleable>
    <declare-styleable name="SettingSwitchTitleOnlyView">
        <attr name="cardItemIcon"/>
        <attr name="cardItemTitle"/>
        <attr name="settingMinApi"/>
        <attr name="settingDefaultValue"/>
        <attr name="settingPreferenceKey"/>
    </declare-styleable>
</resources>